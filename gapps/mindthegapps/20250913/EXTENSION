name=MindTheGapps
version=20250913
description="GApps for android devices"
provides=("gapps")
conflicts=("gapps" "microg")
source_x86_64=("${name}-${version}.zip::https://github.com/ayasa520/MindTheGappsBuilder/releases/download/20250913/MindTheGapps-13.0.0-x86_64-20250913.zip")
source_arm64=("${name}-${version}.zip::https://github.com/ayasa520/MindTheGappsBuilder/releases/download/20250913/MindTheGapps-13.0.0-arm64-20250913.zip")
source_arm=("${name}-${version}.zip::https://github.com/ayasa520/MindTheGappsBuilder/releases/download/20250913/MindTheGapps-13.0.0-arm-20250913.zip")
sha256sums_x86_64=("71cf70e6358ecc4d536b9426e6e256d35d128741da48efab69ab6bf7544c6228")
sha256sums_arm64=("44bd297bea0b3b7f6b36f295b429c8bdce432eba55ec1ddd74f6920e22f65ff8")
sha256sums_arm=("60dce548571fc6d28adb8e5289d723d7ad4bcfa3bd4259e3cc8a61fb569ad313")
android_version=13
arch=("x86_64" "arm64" "arm")
install="gapps.install"

package() {
    unzip "${name}-${version}.zip" -d "$srcdir"
    cp -rf "$srcdir"/system $pkgdir/
    chown -R root:root $pkgdir/
    find $pkgdir -type d -exec chmod 755 {} \;
    find $pkgdir -type f -exec chmod 644 {} \;
    find $pkgdir -name "*.sh" -exec chmod 755 {} \;
}
